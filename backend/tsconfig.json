{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@sgcv2/shared": [
        "../../packages/shared/dist"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@const/*": [
        "./const/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@auth/*": [
        "./modules/auth/*"
      ],
      "@users/*": [
        "./modules/users/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@types/*": [
        "./types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "references": [
    {
      "path": "../packages/shared"
    }
  ]
}