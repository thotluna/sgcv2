{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "jest", "supertest"],
    "baseUrl": "./src",
    "paths": {
      "@sgcv2/shared": ["../../packages/shared/dist"],
      "@config/*": ["./config/*"],
      "@const/*": ["./const/*"],
      "@modules/*": ["./modules/*"],
      "@auth/*": ["./modules/auth/*"],
      "@users/*": ["./modules/users/*"],
      "@shared/*": ["./shared/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/modules/users/users.controller.old",
    "src/modules/users/users.service.old"
  ],
  "exclude": ["node_modules", "dist", "tests"],
  "references": [
    {
      "path": "../packages/shared"
    }
  ]
}
