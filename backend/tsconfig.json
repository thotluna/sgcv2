{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "jest", "supertest"],
    "baseUrl": "./src",
    "paths": {
      "@sgcv2/shared": ["../../packages/shared/dist"],
      "@config/*": ["./config/*"],
      "@modules/*": ["./modules/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"],
  "references": [
    {
      "path": "../packages/shared"
    }
  ]
}
