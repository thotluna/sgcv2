{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node",
      "jest",
      "supertest"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    // CRÍTICO: baseUrl debe ser la raíz del proyecto backend
    "baseUrl": ".",
    "paths": {
      // Rutas relativas a baseUrl (que es el directorio backend/)
      "@sgcv2/shared": [
        "../packages/shared/src/index.ts"
      ],
      "@sgcv2/shared/*": [
        "../packages/shared/src/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@auth/*": [
        "src/modules/auth/*"
      ],
      "@const/*": [
        "src/const/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}